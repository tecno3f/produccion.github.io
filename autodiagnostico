  <script>
    function calcularResultado() {
      const form = document.getElementById('formulario');
      let total = 0;
      for (let i = 1; i <= 7; i++) {
        total += parseInt(form['q' + i].value);
      }

      let mensaje = '';
      if (total <= 15) {
        mensaje = 'Riesgo alto. Productividad interna muy baja. Necesita intervención urgente.';
      } else if (total <= 24) {
        mensaje = 'Nivel básico. Algunas capacidades están presentes, pero hay muchas oportunidades de mejora.';
      } else if (total <= 30) {
        mensaje = 'Buen nivel. La empresa tiene bases sólidas, se recomienda profundizar.';
      } else {
        mensaje = 'Excelente. Cultura productiva instalada. Puede actuar como empresa líder o mentora.';
      }

      document.getElementById('resultado').innerHTML = '<strong>Puntaje total:</strong> ' + total + '<br><br><strong>Diagnóstico:</strong> ' + mensaje;
    }
  </script>
